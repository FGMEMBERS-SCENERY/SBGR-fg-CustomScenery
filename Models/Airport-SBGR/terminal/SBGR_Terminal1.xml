<PropertyList>
	<path>SBGR_Terminal1.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>guarulhos1</object-name>
		<condition>
			<greater-than>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.57</value>
			</greater-than>
		</condition>
		<global type="bool">true</global>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
		<texture>guarulhosnight1.png</texture>
	</animation>
	
